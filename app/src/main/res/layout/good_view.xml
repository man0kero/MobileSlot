<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_port"
        tools:context=".ViewGood">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topLineForSLot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topLineForBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftLineForBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightLineForBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:src="@drawable/women_port"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topLine" />

        <ImageView
            android:id="@+id/slotBack"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/slot_port"
            app:layout_constraintEnd_toEndOf="@id/rightLine"
            app:layout_constraintStart_toStartOf="@id/leftLine"
            app:layout_constraintTop_toTopOf="@id/topLineForSLot" />


        <ImageView
            android:id="@+id/balanceBack"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:src="@drawable/balance_port"
            app:layout_constraintEnd_toEndOf="@id/rightLineForBalance"
            app:layout_constraintStart_toStartOf="@id/leftLineForBalance"
            app:layout_constraintTop_toTopOf="@id/topLineForBalance" />

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BALANCE"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@id/balanceScore"
            app:layout_constraintEnd_toEndOf="@id/rightLineForBalance"
            app:layout_constraintStart_toStartOf="@id/leftLineForBalance" />

        <TextView
            android:id="@+id/balanceScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 000"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/balanceBack"
            app:layout_constraintEnd_toEndOf="@id/rightLineForBalance"
            app:layout_constraintStart_toStartOf="@id/leftLineForBalance" />


        <ImageView
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/rate_port"
            app:layout_constraintBottom_toTopOf="@id/bottomLine"
            app:layout_constraintEnd_toEndOf="@id/rightLine"
            app:layout_constraintStart_toStartOf="@id/leftLine" />

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_upward_24"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintRight_toRightOf="@id/rate"
            app:layout_constraintStart_toStartOf="@+id/rightLineForBalance"
            app:layout_constraintTop_toTopOf="@id/rate" />

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_downward_24"
            app:layout_constraintBottom_toBottomOf="@id/rate"
            app:layout_constraintEnd_toEndOf="@id/leftLineForBalance"
            app:layout_constraintLeft_toLeftOf="@id/rate"
            app:layout_constraintTop_toTopOf="@id/rate" />


        <TextView
            android:id="@+id/rateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="RATE"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/rightLineForBalance"
            app:layout_constraintStart_toStartOf="@id/leftLineForBalance"
            app:layout_constraintTop_toTopOf="@id/rate" />


        <TextView
            android:id="@+id/rateScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="75000"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/rightLineForBalance"
            app:layout_constraintStart_toStartOf="@id/leftLineForBalance"
            app:layout_constraintTop_toBottomOf="@id/rateText" />



        <FrameLayout
            android:id="@+id/slotMachine"
            app:layout_constraintTop_toTopOf="@id/slotBack"
            app:layout_constraintBottom_toBottomOf="@id/slotBack"
            app:layout_constraintStart_toStartOf="@id/slotBack"
            app:layout_constraintEnd_toEndOf="@id/slotBack"
            android:layout_width="wrap_content"
            android:layout_marginVertical="35dp"
            android:layout_height="250dp">

            <LinearLayout
                android:id="@+id/slotMachineLay"
                android:layout_width="wrap_content"
                android:layout_height="348dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/line3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/backSlotMachineLay"
                android:layout_width="wrap_content"
                android:layout_height="348dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/backLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/backLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/backLine3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>



        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/slotBack"
            app:layout_constraintBottom_toBottomOf="@id/slotBack"
            app:layout_constraintStart_toStartOf="@id/slotBack"
            app:layout_constraintEnd_toEndOf="@id/slotBack"
            android:background="@drawable/frame_slot_port"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/playBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:text="PLAY"
            android:textColor="@color/white"
            android:backgroundTint="#808506"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/target_left"
            app:layout_constraintBottom_toBottomOf="@id/slotMachine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/slotMachine" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/target_right"
            app:layout_constraintBottom_toBottomOf="@id/slotMachine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/slotMachine" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/winLoseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            tools:text="You LOSE" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>